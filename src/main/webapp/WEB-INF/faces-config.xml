<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <navigation-rule>
        <description>Allgemeine Routingregeln</description>
        <from-view-id>views/*</from-view-id>
        
        <navigation-case>
            <from-outcome>home</from-outcome>
            <to-view-id>views/index.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>franking</from-outcome>
            <to-view-id>views/franking.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>tracking</from-outcome>
            <to-view-id>views/tracking.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login</from-outcome>
            <to-view-id>views/login.xhtml</to-view-id>
        </navigation-case>

        <navigation-case>
            <from-outcome>register</from-outcome>
            <to-view-id>views/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>userCreated</from-outcome>
            <to-view-id>views/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login_ok</from-outcome>
            <to-view-id>views/franking.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>label_fail</from-outcome>
            <to-view-id>views/franking.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>login_error</from-outcome>
            <to-view-id>views/login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>show_label</from-outcome>
            <to-view-id>views/label.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>tracking_info</from-outcome>
            <to-view-id>views/trackingInfo.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>user_exists</from-outcome>
            <to-view-id>views/register.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>overview</from-outcome>
            <to-view-id>views/overview.xhtml</to-view-id>
        </navigation-case>

    </navigation-rule>
</faces-config>
